{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // enable additional rules
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],

        // disable rules from base configurations
        "no-console": "off"
    }
}
